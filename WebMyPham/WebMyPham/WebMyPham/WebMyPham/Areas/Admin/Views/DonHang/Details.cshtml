@model WebMyPham.Models.DonHang
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}
<style>
    .date-time {
        height: 29px;
    }

    p {
        text-align: center;
        font-weight: bold;
        font-size: 20px;
    }
</style>

<div id="main">
    <ol class="breadcrumb">
        <li><a href="/Admin/HomeAd/Index"><i class="fa fa-home"></i> Trang quản trị</a></li>
        <li><a href="/Admin/DonHang/Index"></a>Đơn Hàng</li>
        <li class="active"><a href="#"></a>Chi Tiết Đơn hàng</li>
    </ol>
    <br />
    <p>Thêm Mới Đơn Hàng</p>
    <div class="form-horizontal col-xl-9 col-lg-10 col-md-12 col-sm-12">
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.ngayxuat, "Ngày tạo", htmlAttributes: new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.ngayxuat, new { htmlAttributes = new { @type = "date", @class = "date-time", @disabled = "true" } })
                @Html.ValidationMessageFor(model => model.ngayxuat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idKH, "Mã Khách Hàng", htmlAttributes: new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.idKH, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                @Html.ValidationMessageFor(model => model.idKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KhachHang.tenKH, "Tên Khách Hàng", htmlAttributes: new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.KhachHang.tenKH, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                @Html.ValidationMessageFor(model => model.KhachHang.tenKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KhachHang.diachi, "Địa Chỉ", htmlAttributes: new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.KhachHang.diachi, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                @Html.ValidationMessageFor(model => model.KhachHang.diachi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KhachHang.sdt, "Điện Thoại", htmlAttributes: new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.KhachHang.sdt, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                @Html.ValidationMessageFor(model => model.KhachHang.sdt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KhachHang.ngaysinh, "Email", htmlAttributes: new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.KhachHang.ngaysinh, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                @Html.ValidationMessageFor(model => model.KhachHang.ngaysinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.trangthai, "Trạng Thái", htmlAttributes: new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.trangthai, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                @Html.ValidationMessageFor(model => model.trangthai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <a class="btn btn-primary" href="/Admin/DonHang/Edit/@Model.iddonhang" data-id="@Model.iddonhang"<small><i class="fa fa-edit"></i></small>Sửa Thông Tin</a>
                <a class="btn btn-warning" href="/Admin/DonHang/Index"><small><i class="fa fa-reply"></i></small> Trở về</a>
            </div>
        </div>
    </div>
</div>



