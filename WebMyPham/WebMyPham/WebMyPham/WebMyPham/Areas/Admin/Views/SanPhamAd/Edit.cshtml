@model WebMyPham.Models.SanPham
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}
<style>
    p {
        text-align: center;
        font-weight: bold;
        font-size: 20px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <p>Sửa Thông Tin Sản Phẩm</p>
    <div class="form-horizontal col-xl-9 col-lg-10 col-md-12 col-sm-12">
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idsp)

        <div class="form-group">
            @Html.LabelFor(model => model.tensp, "Tên Sản Phẩm", htmlAttributes: new { @class = "col-sm-3 control-label required" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.tensp, new { htmlAttributes = new { @class = "form-control", @name = "title", @type = "text", @value = "", @id = "title", @placeholder = "Tên sản phẩm ( ~ 70 ký tự )", @required = "", @maxlength = "100" } })
                @Html.ValidationMessageFor(model => model.tensp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.mota, "Mô Tả", htmlAttributes: new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.mota, new { htmlAttributes = new { @class = "form-control", @name = "keywords", @type = "text", @value = "", @id = "keywords", @placeholder = "Mô Tả ( ~ 160 ký tự )", @maxlength = "255" } })
                @Html.ValidationMessageFor(model => model.mota, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.hinhanh, "Hình Ảnh", htmlAttributes: new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.hinhanh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.hinhanh, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            @Html.LabelFor(model => model.giaban, "Giá Sản Phẩm", htmlAttributes: new { @class = "col-sm-3 control-label required" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.giaban, new { htmlAttributes = new { @class = "form-control", @placeholder = "Giá sản phẩm (đơn vị: VNĐ)", @repuired = "", @maxlength = "255" } })
                @Html.ValidationMessageFor(model => model.giaban, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.trangthai, "Trạng Thái", htmlAttributes: new { @class = "col-sm-3 control-label required" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.trangthai, new { htmlAttributes = new { @class = "form-control", @placeholder = "Còn Hàng || Hết Hàng", @required = "" } })
                @Html.ValidationMessageFor(model => model.trangthai, "", new { @class = "text-danger" })
            </div>
        </div>

      

        <div class="form-group">
            @Html.LabelFor(model => model.soluong, "Số Lượng", htmlAttributes: new { @class = "col-sm-3 control-label" })
            <div class="col-sm-2">
                @Html.EditorFor(model => model.soluong, new { htmlAttributes = new { @class = "form-control", @min = "0" } })
                @Html.ValidationMessageFor(model => model.soluong, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.MADM, "Loại Sản Phẩm", htmlAttributes: new { @class = "col-sm-3 control-label required" })
            <div class="col-sm-9">
                @Html.DropDownList("MADM", null, htmlAttributes: new { @class = "form-control", @id = "type_product", @name = "type_product" })
                @Html.ValidationMessageFor(model => model.MADM, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn btn-submit"><small><i class="fa fa-edit"></i></small>Lưu</button>
                <a class="btn btn-warning" href="/Admin/SanPhamAd/Index"><small><i class="fa fa-reply"></i></small> Trở về</a>
            </div>
        </div>
    </div>
}


