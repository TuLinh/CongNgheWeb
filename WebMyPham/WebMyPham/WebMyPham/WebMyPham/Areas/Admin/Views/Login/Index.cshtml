<!DOCTYPE html>
<html lang="vi">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <base href=".">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng Nhập Hệ Thống</title>
    <link rel="shortcut icon" type="image/png" href="/Content/default/favicon.jpg" />
    <link href="/Areas/Admin/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Areas/Admin/Content/css/font-awesome.min.css" rel="stylesheet">
    <link href="/Areas/Admin/Content/css/admin.css" rel="stylesheet">
    <script type="text/javascript" src="/Areas/Admin/Content/js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="/Areas/Admin/Content/js/jquery-ui-1.10.2.min.js"></script>
    <script type="text/javascript" src="/Areas/Admin/Content/js/bootstrap.min.js"></script>

    <style>
        body {
            background: #34495e;
        }

        #loginForm {
            width: 300px;
            min-height: 200px;
            padding: 20px;
            margin: 120px auto 0;
            background: #fff;
            border-radius: 7px;
        }
    </style>
</head>
<body>
    <div id="loginForm">
        @using (Html.BeginForm())
        {
            
                <div class="form-group" style="text-align: center"><h4>ĐĂNG NHẬP HỆ THỐNG</h4></div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                        <input name="email" type="text" class="form-control" id="email" placeholder="Tên Đăng Nhập" maxlength="100" required="">
                    </div>
                    <span>@ViewBag.ThongBao</span>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                        <input name="password" type="password" class="form-control" id="password" placeholder="Mật khẩu" required="">
                    </div>
                    <span>@ViewBag.ThongBaomk</span>
                </div>
               
                    <button class="btn btn-primary" type="submit"><i class="fa fa-sign-in"></i>Đăng nhập</button>
                  
           
        }
    </div>

</body>
</html>


